@model IMS.Core.Models.ProductMasterModel

@{
    ViewData["Title"] = "Create";
}



<div class="card">
    <div class="card-header">
        <h1>أضافة صنف</h1>
    </div>
    <div class="row card-body">
        <div class="col-md-9">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">

                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="Code" class="control-label"></label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TitleAr" class="control-label"></label>
                            <input asp-for="TitleAr" class="form-control" />
                            <span asp-validation-for="TitleAr" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MeasuringUnitId" class="control-label"></label>
                            <select asp-for="MeasuringUnitId" class="form-control" asp-items="ViewBag.MeasuringUnit"></select>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="TitleEn" class="control-label"></label>
                            <input asp-for="TitleEn" class="form-control" />
                            <span asp-validation-for="TitleEn" class="text-danger"></span>
                        </div>

                        
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category"></select>
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" value="تسجيل" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
    <div class="card-footer">
        <div>
            <a asp-action="Index" style="font-size:25px" class="btn btn-primary">العودة لقائمة الاصناف</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
