@model IMS.Core.Models.ProductVarientModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <script type="text/javascript">
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
        {
            <text>
        $(document).ready(function () {
            swal({
                title: 'خطاء',
                text: '@ViewData.ModelState["Error"].Errors.First().ErrorMessage',
                icon: "error",
                button: "تم",
            });
            });
            </text>
        }
    </script>
</head>

<div class="card">
    <div class="card-header">
        <h1>أضافة منتج فرعي</h1>
    </div>
    <div class="row card-body">
        <div class="col-md-9">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.product"></select>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="VarientCode" class="control-label"></label>
                        <input asp-for="VarientCode" class="form-control" />
                        <span asp-validation-for="VarientCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="RfidCode" class="control-label"></label>
                        <input asp-for="RfidCode" class="form-control" />
                        <span asp-validation-for="RfidCode" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="تسجيل" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
    <div class="card-footer">
        <div>
            <a asp-action="Index" style="font-size:25px" class="btn btn-primary">العودة لقائمة الاصناف</a>
        </div>
    </div>
</div>