@model IMS.Core.Models.UserModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-header">
                <h3>تعديل مستخدم </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group col-6">
                        <label asp-for="FristName" class="control-label"></label>
                        <input asp-for="FristName" class="form-control" />
                        <span asp-validation-for="FristName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="MobileNo" class="control-label"></label>
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                  

                    <div class="form-group  form-check col-6">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>

                </div>

            </div>


            <div class="card-footer">
                <div class="form-group">
                    <input type="submit" value="تسجيل" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index" style="font-size:25px" class="btn btn-secondary">العودة للقائمة</a>
                </div>
            </div>

        </form>
    </div>
</div>



